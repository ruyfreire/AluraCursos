<html>
<head>
    <meta charset="UTF-8">
    <title>Servidor NodeJS</title>
</head>
<body>
    <h1>Atualizar livro</h1>

    <form action="/livros/atualiza" method="post" for(livro in data.livro)>

        <input type="hidden" id="id" name="id" value="${livro.id}"/>

        <div>
            <label for="titulo">Titulo:</label>
            <input type="text" id="titulo" name="titulo" placeholder="coloque o titulo" value="${livro.titulo}"/>
        </div>
        <div>
            <label for="preco">Preço:</label>
            <input type="text" id="preco" name="preco" placeholder="150.25" value="${livro.preco}"/>
        </div>
        <div>
            <label for="descricao">Descrição:</label>
            <textarea cols="20" rows="10"  id="descricao" name="descricao" placeholder="fale sobre o livro">${livro.descricao}</textarea>
        </div>

        <input type="submit" value="Atualizar" />
    </form>
</body>
</html>